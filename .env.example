# =========================
# App
# =========================
NODE_ENV=development
PORT=3000
APP_NAME=ASE School Backend
APP_URL=http://localhost:3000
SWAGGER_PATH=api/docs

# =========================
# Security
# =========================
JWT_ACCESS_SECRET=CHANGE_ME_access_secret_very_long
JWT_REFRESH_SECRET=CHANGE_ME_refresh_secret_very_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# bcrypt cost
BCRYPT_SALT_ROUNDS=12

# Rate limit (Throttler)
THROTTLE_TTL_SECONDS=60
THROTTLE_LIMIT=120

# =========================
# Database (PostgreSQL)
# =========================
DB_HOST=localhost
DB_PORT=7866
DB_USERNAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ase_school
DB_SYNCHRONIZE=false
DB_LOGGING=false

# =========================
# Redis
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# =========================
# Firebase Admin (FCM)
# =========================
# Use ONE of these methods:

# Method A: Path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./secrets/firebase-service-account.json

# Method B: Service account JSON (stringified)
FIREBASE_SERVICE_ACCOUNT_JSON=

# =========================
# Cloudflare R2 (S3 compatible)
# =========================
R2_ACCOUNT_ID=CHANGE_ME
R2_ACCESS_KEY_ID=CHANGE_ME
R2_SECRET_ACCESS_KEY=CHANGE_ME
R2_BUCKET=ase-school
R2_PUBLIC_BASE_URL=https://YOUR_PUBLIC_R2_DOMAIN_OR_CDN
R2_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_REGION=auto

# =========================
# Email (OTP)
# =========================
MAIL_FROM_NAME=ASE School
MAIL_FROM_EMAIL=no-reply@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_SECURE=false

# OTP settings
OTP_LENGTH=6
OTP_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5
OTP_COOLDOWN_SECONDS=60

# =========================
# Logs
# =========================
LOG_LEVEL=info
